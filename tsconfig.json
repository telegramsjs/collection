{
  "compilerOptions": {
    "target": "es2019",
    "module": "nodenext",
    "declaration": true,
    "noEmit": false,
    "importHelpers": false,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
